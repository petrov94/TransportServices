            <TabItem Header="Profile" HorizontalAlignment="Stretch">
                <Grid Background="#FFD4C7B1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
